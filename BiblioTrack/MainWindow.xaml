<Window x:Name="Biblio" x:Class="BiblioTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BiblioTracker" Height="400" Width="700">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
            <ComboBox HorizontalAlignment="Left" Margin="5,5,0,0" Width="150" Height="30">
                <ListBoxItem Content="All Items"/>
                <ListBoxItem Content="For Sale"/>
                <ListBoxItem Content="Sold"/>
            </ComboBox>
            <Button Content="View Collection Category" Margin="5,5,0,0" Width="150" Height="30"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
            <Button Content="Add New Volume" Margin="5,40,0,0" Width="150" Height="30"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#F2686868" Height="150" Width="200" Margin="0,0,5,5">
            <TextBox x:Name="Total_Volumes_Box" Height="23" TextWrapping="Wrap" Text="Total Volumes:" IsReadOnly="true" Background="#F2686868" BorderThickness="0,0,0,1"></TextBox>
            <TextBox x:Name="For_Sale_Box" Height="23" TextWrapping="Wrap" Text="For Sale:" IsReadOnly="true" Background="#F2686868" BorderThickness="0,0,0,1"></TextBox>
            <TextBox x:Name="Sold_Box" Height="23" TextWrapping="Wrap" Text="Sold:" IsReadOnly="true" Background="#F2686868" BorderThickness="0,0,0,1"></TextBox>
        </StackPanel>
    </Grid>
</Window>
