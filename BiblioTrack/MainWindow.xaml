<Window x:Name="Biblio" x:Class="BiblioTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BiblioTracker" Height="400" Width="700">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button Content="View Collection Category" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="149"/>
        <ComboBox HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120">
            <ListBoxItem Content="All Items"/>
            <ListBoxItem Content="For Sale"/>
            <ListBoxItem Content="Sold"/>
        </ComboBox>
        <Button Content="Add New Volume" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
